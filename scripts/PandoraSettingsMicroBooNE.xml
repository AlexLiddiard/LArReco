<!-- Pandora settings xml file -->

<pandora>
    <!-- HELPER CLASS SETTINGS -->
    <IsMonitoringEnabled> true </IsMonitoringEnabled>
    <ShouldDisplayAlgorithmInfo> true </ShouldDisplayAlgorithmInfo>
    <ShouldCollapseMCParticlesToPfoTarget>false</ShouldCollapseMCParticlesToPfoTarget>

    <EmShowerFastFunction> LArEmShowerId </EmShowerFastFunction>
    <PhotonFastFunction> LArPhotonId </PhotonFastFunction>
    <ElectronFastFunction> LArElectronId </ElectronFastFunction>
    <MuonFastFunction> LArMuonId </MuonFastFunction>

    <CaloHitHelper>
        <ShouldCalculateDensityWeight>false</ShouldCalculateDensityWeight>
        <ShouldCalculateSurroundingEnergy>false</ShouldCalculateSurroundingEnergy>
    </CaloHitHelper>

    <!-- PANDORA ALGORITHM SETTINGS -->
    <algorithm type = "EventReading">
         <EventFileName>/r01/lbne/argon/uboone/S2013.10.21/prodgenie_bnb_nu_t0_cosmic_3window_uboone/pndr/uBooNE_Events_prodgenie_bnb_nu_t0_cosmic_3window_uboone_11828891_1.pndr</EventFileName>
         <GeometryFileName>/r01/lbne/argon/uboone/S2013.10.21/prodgenie_bnb_nu_t0_cosmic_3window_uboone/pndr/uBooNE_Geometry_prodgenie_bnb_nu_t0_cosmic_3window_uboone_11828891_1.pndr</GeometryFileName>
         <ShouldReadEvents>true</ShouldReadEvents>
         <ShouldReadGeometry>true</ShouldReadGeometry>
         <SkipToEvent>0</SkipToEvent>
    </algorithm>

    <!-- COSMIC RAY RECONSTRUCTION -->
    <algorithm type = "LArListPreparation">
      <OutputCaloHitListNameW>CaloHitListW</OutputCaloHitListNameW>
      <OutputCaloHitListNameU>CaloHitListU</OutputCaloHitListNameU>
      <OutputCaloHitListNameV>CaloHitListV</OutputCaloHitListNameV>
      <FilteredCaloHitListName>CaloHitListFiltered</FilteredCaloHitListName>
      <CurrentCaloHitListReplacement>CaloHitListW</CurrentCaloHitListReplacement>
      <OutputMCParticleListNameU>MCParticleListU</OutputMCParticleListNameU>
      <OutputMCParticleListNameV>MCParticleListV</OutputMCParticleListNameV>
      <OutputMCParticleListNameW>MCParticleListW</OutputMCParticleListNameW>
      <OutputMCParticleListName3D>MCParticleList3D</OutputMCParticleListName3D>
      <CurrentMCParticleListReplacement>MCParticleList3D</CurrentMCParticleListReplacement>
    </algorithm>

    <algorithm type = "LArVisualMonitoring">
        <ShowMCParticles>false</ShowMCParticles>
        <ShowCurrentCaloHits>false</ShowCurrentCaloHits>
        <ShowCurrentTracks>false</ShowCurrentTracks>
        <ShowCurrentClusters>false</ShowCurrentClusters>
        <ShowCurrentPfos>false</ShowCurrentPfos>
        <CaloHitListNames>CaloHitListW CaloHitListU CaloHitListV</CaloHitListNames>
        <ShowDetector>false</ShowDetector>
        <BlackBackground>false</BlackBackground>
        <HitColors>Iterate</HitColors>
    </algorithm>

    <!-- 2D cosmic ray reconstruction, W View -->
    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArClusterCreation" description = "ClusterFormation"/>
        <InputCaloHitListName>CaloHitListW</InputCaloHitListName>
        <ClusterListName> ProtoClustersW </ClusterListName>
        <RestoreOriginalCaloHitList>false</RestoreOriginalCaloHitList>
    </algorithm>
    <algorithm type = "LArLayerSplitting"/>
    <algorithm type = "LArTransverseAssociation"/>
    <algorithm type = "LArLongitudinalAssociation"/>
    <algorithm type = "LArTransverseExtension"/>
    <algorithm type = "LArLongitudinalExtension"/>
    <algorithm type = "LArBranchSplitting">
        <CosmicMode>true</CosmicMode>
    </algorithm>
    <algorithm type = "LArDeltaRaySplitting">
        <CosmicMode>true</CosmicMode>
    </algorithm>
    <algorithm type = "LArCosmicRayExtension"/>
    <algorithm type = "LArLengthSeedFinding">
        <SeedClusterListName>SeedClustersW</SeedClusterListName>
        <NonSeedClusterListName>ProtoClustersW</NonSeedClusterListName>
    </algorithm>

    <!-- 2D cosmic ray reconstruction, U View -->
    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArClusterCreation" description = "ClusterFormation"/>
        <InputCaloHitListName>CaloHitListU</InputCaloHitListName>
        <ClusterListName> ProtoClustersU </ClusterListName>
        <RestoreOriginalCaloHitList>false</RestoreOriginalCaloHitList>
    </algorithm>
    <algorithm type = "LArLayerSplitting"/>
    <algorithm type = "LArTransverseAssociation"/>
    <algorithm type = "LArLongitudinalAssociation"/>
    <algorithm type = "LArTransverseExtension"/>
    <algorithm type = "LArLongitudinalExtension"/>
    <algorithm type = "LArBranchSplitting">
        <CosmicMode>true</CosmicMode>
    </algorithm>
    <algorithm type = "LArDeltaRaySplitting">
        <CosmicMode>true</CosmicMode>
    </algorithm>
    <algorithm type = "LArCosmicRayExtension"/>
    <algorithm type = "LArLengthSeedFinding">
        <SeedClusterListName>SeedClustersU</SeedClusterListName>
        <NonSeedClusterListName>ProtoClustersU</NonSeedClusterListName>
    </algorithm>

    <!-- 2D cosmic ray reconstruction, V View -->
    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArClusterCreation" description = "ClusterFormation"/>
        <InputCaloHitListName>CaloHitListV</InputCaloHitListName>
        <ClusterListName> ProtoClustersV </ClusterListName>
        <RestoreOriginalCaloHitList>false</RestoreOriginalCaloHitList>
    </algorithm>
    <algorithm type = "LArLayerSplitting"/>
    <algorithm type = "LArTransverseAssociation"/>
    <algorithm type = "LArLongitudinalAssociation"/>
    <algorithm type = "LArTransverseExtension"/>
    <algorithm type = "LArLongitudinalExtension"/>
    <algorithm type = "LArBranchSplitting">
        <CosmicMode>true</CosmicMode>
    </algorithm>
    <algorithm type = "LArDeltaRaySplitting">
        <CosmicMode>true</CosmicMode>
    </algorithm>
    <algorithm type = "LArCosmicRayExtension"/>
    <algorithm type = "LArLengthSeedFinding">
        <SeedClusterListName>SeedClustersV</SeedClusterListName>
        <NonSeedClusterListName>ProtoClustersV</NonSeedClusterListName>
    </algorithm>

    <!-- 3D cosmic ray reconstruction -->
    <algorithm type = "LArThreeDTransverseTracks">
        <InputClusterListNameU>SeedClustersU</InputClusterListNameU>
        <InputClusterListNameV>SeedClustersV</InputClusterListNameV>
        <InputClusterListNameW>SeedClustersW</InputClusterListNameW>
        <OutputPfoListName>ThreeDParticles</OutputPfoListName>
        <MinMatchedFraction>0.33</MinMatchedFraction>
    </algorithm>

    <algorithm type = "LArThreeDLongitudinalTracks">
        <InputClusterListNameU>SeedClustersU</InputClusterListNameU>
        <InputClusterListNameV>SeedClustersV</InputClusterListNameV>
        <InputClusterListNameW>SeedClustersW</InputClusterListNameW>
        <OutputPfoListName>ThreeDParticles</OutputPfoListName>
        <MinMatchedFraction>0.33</MinMatchedFraction>
    </algorithm>

    <algorithm type = "LArThreeDPairedTracks">
        <InputClusterListNameU>SeedClustersU</InputClusterListNameU>
        <InputClusterListNameV>SeedClustersV</InputClusterListNameV>
        <InputClusterListNameW>SeedClustersW</InputClusterListNameW>
        <OutputPfoListName>ThreeDParticles</OutputPfoListName>
    </algorithm>

    <!-- Cosmic removal -->
    <algorithm type = "LArCosmicRayIdentification">
        <InputPfoListName>ThreeDParticles</InputPfoListName>
        <OutputPfoListName>ThreeDCosmicRays</OutputPfoListName>
    </algorithm>
    <algorithm type = "LArCosmicRayShowerMatching">
        <InputPfoListName>ThreeDCosmicRays</InputPfoListName>
        <InputClusterListNamesU>SeedClustersU ProtoClustersU</InputClusterListNamesU>
        <InputClusterListNamesV>SeedClustersV ProtoClustersV</InputClusterListNamesV>
        <InputClusterListNamesW>SeedClustersW ProtoClustersW</InputClusterListNamesW>
    </algorithm>
    <algorithm type = "LArListDissolution">
        <PfoListNames>ThreeDParticles</PfoListNames>
    </algorithm>
    <algorithm type = "LArListDissolution">
        <WarnIfClustersUnavailable>false</WarnIfClustersUnavailable>
        <ClusterListNames>SeedClustersU SeedClustersV SeedClustersW ProtoClustersU ProtoClustersV ProtoClustersW</ClusterListNames>
    </algorithm>
    <algorithm type = "LArListMerging">
        <SourceClusterListNames>SeedClustersU ProtoClustersU SeedClustersV ProtoClustersV SeedClustersW ProtoClustersW</SourceClusterListNames>
        <TargetClusterListNames>CosmicRayClustersU CosmicRayClustersU CosmicRayClustersV CosmicRayClustersV CosmicRayClustersW CosmicRayClustersW</TargetClusterListNames>
    </algorithm>

    <algorithm type = "LArVisualMonitoring">
        <ShowMCParticles>false</ShowMCParticles>
        <ShowCurrentCaloHits>false</ShowCurrentCaloHits>
        <ShowCurrentTracks>false</ShowCurrentTracks>
        <ShowCurrentClusters>false</ShowCurrentClusters>
        <ShowCurrentPfos>false</ShowCurrentPfos>
        <PfoListNames>ThreeDCosmicRays</PfoListNames>
        <ShowDetector>false</ShowDetector>
        <BlackBackground>false</BlackBackground>
        <HitColors>Iterate</HitColors>
    </algorithm>

    <!-- NEUTRINO RECONSTRUCTION -->
    <algorithm type = "LArListPreparation">
        <OutputCaloHitListNameW>NoCosmicCaloHitListW</OutputCaloHitListNameW>
        <OutputCaloHitListNameU>NoCosmicCaloHitListU</OutputCaloHitListNameU>
        <OutputCaloHitListNameV>NoCosmicCaloHitListV</OutputCaloHitListNameV>
        <FilteredCaloHitListName>NoCosmicCaloHitListFiltered</FilteredCaloHitListName>
        <CurrentCaloHitListReplacement>NoCosmicCaloHitListW</CurrentCaloHitListReplacement>
        <OutputMCParticleListNameU>NoCosmicMCParticleListU</OutputMCParticleListNameU>
        <OutputMCParticleListNameV>NoCosmicMCParticleListV</OutputMCParticleListNameV>
