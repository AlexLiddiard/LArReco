    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArClusterCreation" description = "ClusterFormation"/>
        <InputCaloHitListName>NoCosmicCaloHitListW</InputCaloHitListName>
        <ClusterListName>ClustersW</ClusterListName>
