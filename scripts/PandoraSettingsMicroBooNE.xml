<!-- Pandora settings xml file -->

<pandora>
    <!-- HELPER CLASS SETTINGS -->
    <IsMonitoringEnabled> true </IsMonitoringEnabled>
    <ShouldDisplayAlgorithmInfo> true </ShouldDisplayAlgorithmInfo>
    <ShouldCollapseMCParticlesToPfoTarget>false</ShouldCollapseMCParticlesToPfoTarget>

    <!-- Plugin helper functions -->
    <EmShowerFastFunction> LArEmShowerId </EmShowerFastFunction>
    <PhotonFastFunction> LArPhotonId </PhotonFastFunction>
    <ElectronFastFunction> LArElectronId </ElectronFastFunction>
    <MuonFastFunction> LArMuonId </MuonFastFunction>

    <!-- CaloHit helper settings -->
    <CaloHitHelper>
        <ShouldCalculateDensityWeight>false</ShouldCalculateDensityWeight>
        <ShouldCalculateSurroundingEnergy>false</ShouldCalculateSurroundingEnergy>
    </CaloHitHelper>

    <!-- PANDORA ALGORITHM SETTINGS -->
    <algorithm type = "EventReading">
         <!--EventFileName>/usera/marshall/LAr/testSLC6/uBooNE_Events_noosc.pndr</EventFileName-->
         <EventFileName>/r01/lbne/argon/uboone/S2013.10.21/prodgenie_bnb_nu_t0_cosmic_3window_uboone/pndr/uBooNE_Events_prodgenie_bnb_nu_t0_cosmic_3window_uboone_11828891_4.pndr</EventFileName>
         <GeometryFileName>/usera/marshall/LAr/testSLC6/uBooNE_Geometry.pndr</GeometryFileName>
         <ShouldReadEvents>true</ShouldReadEvents>
         <ShouldReadGeometry>true</ShouldReadGeometry>
         <SkipToEvent>0</SkipToEvent>
    </algorithm>


    <!-- Separate U, V and W views -->
    <algorithm type = "LArEventPreparation">
      <OutputCaloHitListNameW>CaloHitListW</OutputCaloHitListNameW>
      <OutputCaloHitListNameU>CaloHitListU</OutputCaloHitListNameU>
      <OutputCaloHitListNameV>CaloHitListV</OutputCaloHitListNameV>
      <FilteredCaloHitListName>CaloHitListFiltered</FilteredCaloHitListName>
      <CurrentCaloHitListReplacement>CaloHitListW</CurrentCaloHitListReplacement>
      <OutputMCParticleListNameU>MCParticleListU</OutputMCParticleListNameU>
      <OutputMCParticleListNameV>MCParticleListV</OutputMCParticleListNameV>
      <OutputMCParticleListNameW>MCParticleListW</OutputMCParticleListNameW>
      <OutputMCParticleListName3D>MCParticleList3D</OutputMCParticleListName3D>
      <CurrentMCParticleListReplacement>MCParticleList3D</CurrentMCParticleListReplacement>
    </algorithm>


    <!-- Proto Clusters, W View -->
    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArClusterCreation" description = "ClusterFormation"/>
        <InputCaloHitListName>CaloHitListW</InputCaloHitListName>
        <ClusterListName> ProtoClustersW </ClusterListName>
        <RestoreOriginalCaloHitList>false</RestoreOriginalCaloHitList>
    </algorithm>
    <algorithm type = "LArLongitudinalAssociation"/>
    <algorithm type = "LArTransverseAssociation"/>
    <algorithm type = "LArLongitudinalExtension"/>
    <algorithm type = "LArKinkSplitting"/>


    <!-- Proto Clusters, U View -->
    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArClusterCreation" description = "ClusterFormation"/>
        <InputCaloHitListName>CaloHitListU</InputCaloHitListName>
        <ClusterListName> ProtoClustersU </ClusterListName>
        <RestoreOriginalCaloHitList>false</RestoreOriginalCaloHitList>
    </algorithm>
    <algorithm type = "LArLongitudinalAssociation"/>
    <algorithm type = "LArTransverseAssociation"/>
    <algorithm type = "LArLongitudinalExtension"/>
    <algorithm type = "LArKinkSplitting"/>


    <!-- Proto Clusters, V View -->
    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArClusterCreation" description = "ClusterFormation"/>
        <InputCaloHitListName>CaloHitListV</InputCaloHitListName>
        <ClusterListName> ProtoClustersV </ClusterListName>
        <RestoreOriginalCaloHitList>false</RestoreOriginalCaloHitList>
    </algorithm>
    <algorithm type = "LArLongitudinalAssociation"/>
    <algorithm type = "LArTransverseAssociation"/>
    <algorithm type = "LArLongitudinalExtension"/>
    <algorithm type = "LArKinkSplitting"/>


    <!-- 2D Particles, W view -->
    <algorithm type = "LArTwoDPreparation">
        <ClusterListName>ProtoClustersW</ClusterListName>
        <CaloHitListName>CaloHitListW</CaloHitListName>
        <VertexName>VertexW</VertexName>
    </algorithm>
    <algorithm type = "LArLengthSeedFinding">
        <SeedClusterListName>SeedClustersW</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersW</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArParallelClusterMerging">
        <SeedClusterListName>SeedClustersW</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersW</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArBoundedClusterMerging">
        <SeedClusterListName>SeedClustersW</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersW</NonSeedClusterListName>
    </algorithm>


    <!-- 2D Particles, U view  -->
    <algorithm type = "LArTwoDPreparation">
        <ClusterListName>ProtoClustersU</ClusterListName>
        <CaloHitListName>CaloHitListU</CaloHitListName>
        <VertexName>VertexU</VertexName>
    </algorithm>
    <algorithm type = "LArLengthSeedFinding">
        <SeedClusterListName>SeedClustersU</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersU</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArParallelClusterMerging">
        <SeedClusterListName>SeedClustersU</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersU</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArBoundedClusterMerging">
        <SeedClusterListName>SeedClustersU</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersU</NonSeedClusterListName>
    </algorithm>


    <!-- 2D Particles, V view -->
    <algorithm type = "LArTwoDPreparation">
        <ClusterListName>ProtoClustersV</ClusterListName>
        <CaloHitListName>CaloHitListV</CaloHitListName>
        <VertexName>VertexV</VertexName>
    </algorithm>
    <algorithm type = "LArLengthSeedFinding">
        <SeedClusterListName>SeedClustersV</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersV</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArParallelClusterMerging">
        <SeedClusterListName>SeedClustersV</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersV</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArBoundedClusterMerging">
        <SeedClusterListName>SeedClustersV</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersV</NonSeedClusterListName>
    </algorithm>


