    <!-- 3D Reconstruction: split clusters to find best seeds for 3D matching -->
    <algorithm type = "LArTrackSplitting">
        <algorithm type = "LArClusterCreation" description = "Clustering"/>
        <associationAlgorithms>
            <algorithm type = "LArLongitudinalAssociation"/>
            <algorithm type = "LArTransverseAssociation"/>
            <algorithm type = "LArLongitudinalExtension"/>
            <algorithm type = "LArKinkSplitting"/>
        </associationAlgorithms>
        <InputSeedClusterListName>SeedClustersW</InputSeedClusterListName>
        <ShowerSeedClusterListName>ParticleSeedClustersW</ShowerSeedClusterListName>
        <TrackSeedClusterListName>TrackSeedClustersW</TrackSeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersW</NonSeedClusterListName>
    </algorithm>

    <algorithm type = "LArTrackSplitting">
        <algorithm type = "LArClusterCreation" description = "Clustering"/>
        <associationAlgorithms>
            <algorithm type = "LArLongitudinalAssociation"/>
            <algorithm type = "LArTransverseAssociation"/>
            <algorithm type = "LArLongitudinalExtension"/>
            <algorithm type = "LArKinkSplitting"/>
        </associationAlgorithms>
        <InputSeedClusterListName>SeedClustersU</InputSeedClusterListName>
        <ShowerSeedClusterListName>ParticleSeedClustersU</ShowerSeedClusterListName>
        <TrackSeedClusterListName>TrackSeedClustersU</TrackSeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersU</NonSeedClusterListName>
    </algorithm>

    <algorithm type = "LArTrackSplitting">
        <algorithm type = "LArClusterCreation" description = "Clustering"/>
        <associationAlgorithms>
            <algorithm type = "LArLongitudinalAssociation"/>
            <algorithm type = "LArTransverseAssociation"/>
            <algorithm type = "LArLongitudinalExtension"/>
            <algorithm type = "LArKinkSplitting"/>
        </associationAlgorithms>
        <InputSeedClusterListName>SeedClustersV</InputSeedClusterListName>
        <ShowerSeedClusterListName>ParticleSeedClustersV</ShowerSeedClusterListName>
        <TrackSeedClusterListName>TrackSeedClustersV</TrackSeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersV</NonSeedClusterListName>
    </algorithm>

    <!-- Match track-like seeds with other track-like seeds -->
    <algorithm type = "LArThreeDTransverseTracks">
        <InputClusterListNameU>TrackSeedClustersU</InputClusterListNameU>
        <InputClusterListNameV>TrackSeedClustersV</InputClusterListNameV>
        <InputClusterListNameW>TrackSeedClustersW</InputClusterListNameW>
        <OutputPfoListName>ThreeDParticles</OutputPfoListName>
    </algorithm>

    <algorithm type = "LArThreeDLongitudinalTracks">
        <InputClusterListNameU>TrackSeedClustersU</InputClusterListNameU>
        <InputClusterListNameV>TrackSeedClustersV</InputClusterListNameV>
        <InputClusterListNameW>TrackSeedClustersW</InputClusterListNameW>
        <OutputPfoListName>ThreeDParticles</OutputPfoListName>
    </algorithm>

    <!-- Try to match any/all remaining seeds -->
    <algorithm type = "LArListMerging">
        <SourceClusterListNames>TrackSeedClustersU TrackSeedClustersV TrackSeedClustersW</SourceClusterListNames>
        <TargetClusterListNames>ParticleSeedClustersU ParticleSeedClustersV ParticleSeedClustersW</TargetClusterListNames>
    </algorithm>

    <algorithm type = "LArThreeDTransverseTracks">
        <InputClusterListNameU>ParticleSeedClustersU</InputClusterListNameU>
        <InputClusterListNameV>ParticleSeedClustersV</InputClusterListNameV>
        <InputClusterListNameW>ParticleSeedClustersW</InputClusterListNameW>
        <OutputPfoListName>ThreeDParticles</OutputPfoListName>
        <MinMatchedFraction>0.5</MinMatchedFraction>
    </algorithm>

    <algorithm type = "LArThreeDLongitudinalTracks">
        <InputClusterListNameU>ParticleSeedClustersU</InputClusterListNameU>
        <InputClusterListNameV>ParticleSeedClustersV</InputClusterListNameV>
        <InputClusterListNameW>ParticleSeedClustersW</InputClusterListNameW>
        <OutputPfoListName>ThreeDParticles</OutputPfoListName>
        <MinMatchedFraction>0.5</MinMatchedFraction>
    </algorithm>

    <algorithm type = "LArThreeDPairedTracks">
        <InputClusterListNameU>ParticleSeedClustersU</InputClusterListNameU>
        <InputClusterListNameV>ParticleSeedClustersV</InputClusterListNameV>
        <InputClusterListNameW>ParticleSeedClustersW</InputClusterListNameW>
        <OutputPfoListName>ThreeDParticles</OutputPfoListName>
    </algorithm>


    <!-- Reassemble 2D showers within 3D particles -->
    <algorithm type = "LArShowerRebuilding">
        <ParticleListName>ThreeDParticles</ParticleListName>
        <SeedClusterListNameU>ParticleSeedClustersU</SeedClusterListNameU>
        <SeedClusterListNameV>ParticleSeedClustersV</SeedClusterListNameV>
        <SeedClusterListNameW>ParticleSeedClustersW</SeedClusterListNameW>
        <NonSeedClusterListNameU>NonSeedClustersU</NonSeedClusterListNameU>
        <NonSeedClusterListNameV>NonSeedClustersV</NonSeedClusterListNameV>
        <NonSeedClusterListNameW>NonSeedClustersW</NonSeedClusterListNameW>
    </algorithm>


    <!-- Tidy up -->
    <algorithm type = "LArIsolatedHitMerging">
        <SeedClusterListName>ParticleSeedClustersW</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersW</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArIsolatedHitMerging">
        <SeedClusterListName>ParticleSeedClustersU</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersU</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArIsolatedHitMerging">
        <SeedClusterListName>ParticleSeedClustersV</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersV</NonSeedClusterListName>
    </algorithm>


    <algorithm type = "LArParticleMonitoring">
        <CaloHitListName>CaloHitListFiltered</CaloHitListName>
        <MCParticleListName>MCParticleList3D</MCParticleListName>
        <PfoListName>ThreeDParticles</PfoListName>
        <OutputTree>PfoTree3D</OutputTree>
        <OutputFile>PfoTree3D.root</OutputFile>
    </algorithm>


