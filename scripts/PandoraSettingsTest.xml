<!-- Pandora settings xml file -->

<pandora>
    <!-- HELPER CLASS SETTINGS -->
    <IsMonitoringEnabled> true </IsMonitoringEnabled>
    <ShouldDisplayAlgorithmInfo> true </ShouldDisplayAlgorithmInfo>
    <ShouldCollapseMCParticlesToPfoTarget>false</ShouldCollapseMCParticlesToPfoTarget>

    <!-- Plugin helper functions -->
    <EmShowerFastFunction> LArEmShowerId </EmShowerFastFunction>
    <PhotonFastFunction> LArPhotonId </PhotonFastFunction>
    <ElectronFastFunction> LArElectronId </ElectronFastFunction>
    <MuonFastFunction> LArMuonId </MuonFastFunction>

    <!-- CaloHit helper settings -->
    <CaloHitHelper>
        <ShouldCalculateDensityWeight>false</ShouldCalculateDensityWeight>
        <ShouldCalculateSurroundingEnergy>false</ShouldCalculateSurroundingEnergy>
    </CaloHitHelper>

    <!-- PANDORA ALGORITHM SETTINGS -->
    <algorithm type = "EventReading">
         <EventFileName>/r01/lbne/argon/pndr/uBooNE_Events_Beam_NoOsc_001.pndr</EventFileName>
         <GeometryFileName>/r01/lbne/argon/pndr/uBooNE_Geometry.pndr</GeometryFileName>
         <ShouldReadEvents>true</ShouldReadEvents>
         <ShouldReadGeometry>true</ShouldReadGeometry>
         <SkipToEvent>0</SkipToEvent>
    </algorithm>


    <!-- Separate U, V and W views -->
    <algorithm type = "LArEventPreparation">
      <OutputCaloHitListNameW>CaloHitListW</OutputCaloHitListNameW>
      <OutputCaloHitListNameU>CaloHitListU</OutputCaloHitListNameU>
      <OutputCaloHitListNameV>CaloHitListV</OutputCaloHitListNameV>
      <CurrentCaloHitListReplacement>CaloHitListW</CurrentCaloHitListReplacement>
    </algorithm>


    <!-- Proto Clusters, W View -->
    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArClusterCreation" description = "ClusterFormation"/>
        <InputCaloHitListName>CaloHitListW</InputCaloHitListName>
        <ClusterListName> ProtoClustersW </ClusterListName>
        <RestoreOriginalCaloHitList>false</RestoreOriginalCaloHitList>
    </algorithm>
    <algorithm type = "LArLongitudinalAssociation"/>
    <algorithm type = "LArTransverseAssociation"/>
    <algorithm type = "LArClusterExtension"/>
    <algorithm type = "LArKinkSplitting"/>



    <!-- Proto Clusters, U View -->
    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArClusterCreation" description = "ClusterFormation"/>
        <InputCaloHitListName>CaloHitListU</InputCaloHitListName>
        <ClusterListName> ProtoClustersU </ClusterListName>
        <RestoreOriginalCaloHitList>false</RestoreOriginalCaloHitList>
    </algorithm>
    <algorithm type = "LArLongitudinalAssociation"/>
    <algorithm type = "LArTransverseAssociation"/>
    <algorithm type = "LArClusterExtension"/>
    <algorithm type = "LArKinkSplitting"/>



    <!-- Proto Clusters, V View -->
    <algorithm type = "LArClusteringParent">
        <algorithm type = "LArClusterCreation" description = "ClusterFormation"/>
        <InputCaloHitListName>CaloHitListV</InputCaloHitListName>
        <ClusterListName> ProtoClustersV </ClusterListName>
        <RestoreOriginalCaloHitList>false</RestoreOriginalCaloHitList>
    </algorithm>
    <algorithm type = "LArLongitudinalAssociation"/>
    <algorithm type = "LArTransverseAssociation"/>
    <algorithm type = "LArClusterExtension"/>
    <algorithm type = "LArKinkSplitting"/>



    <!-- Vertex-Finding -->
    <algorithm type = "LArVertexFinding">
        <ClusterListNameU>ProtoClustersU</ClusterListNameU>
        <ClusterListNameV>ProtoClustersV</ClusterListNameV>
        <ClusterListNameW>ProtoClustersW</ClusterListNameW>
        <VertexNameU>VertexU</VertexNameU>
        <VertexNameV>VertexV</VertexNameV>
        <VertexNameW>VertexW</VertexNameW>
        <UseTrueVertex>false</UseTrueVertex>
        <RunBeamMode>true</RunBeamMode>
    </algorithm>



    <!-- 2D Particles, W view -->
    <algorithm type = "LArTwoDPreparation">
        <ClusterListName>ProtoClustersW</ClusterListName>
        <CaloHitListName>CaloHitListW</CaloHitListName>
        <VertexName>VertexW</VertexName>
    </algorithm>
    <algorithm type = "LArVertexSplitting">
        <InputClusterListName>ProtoClustersW</InputClusterListName>
    </algorithm>
    <algorithm type = "LArVertexSeedFinding">
        <SeedClusterListName>SeedClustersW</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersW</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArSeedLengthGrowing">
        <SeedClusterListName>SeedClustersW</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersW</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArSeedFinding">
        <SeedClusterListName>SeedClustersW</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersW</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArSeedBranchGrowing">
        <SeedClusterListName>SeedClustersW</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersW</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArSeedConsolidation"> 
        <SeedClusterListName>SeedClustersW</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersW</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArSeedRelegation">
        <SeedClusterListName>SeedClustersW</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersW</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArParallelClusterMerging">
        <SeedClusterListName>SeedClustersW</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersW</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArBoundedClusterMerging">
        <SeedClusterListName>SeedClustersW</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersW</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArConeBasedMerging">
        <SeedClusterListName>SeedClustersW</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersW</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArRemnantClustering">
        <NonSeedClusterListName>NonSeedClustersW</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArIsolatedHitMerging">
        <NonSeedClusterListName>NonSeedClustersW</NonSeedClusterListName>
    </algorithm>



    <!-- 2D Particles, U view  -->
    <algorithm type = "LArTwoDPreparation">
        <ClusterListName>ProtoClustersU</ClusterListName>
        <CaloHitListName>CaloHitListU</CaloHitListName>
        <VertexName>VertexU</VertexName>
    </algorithm>
    <algorithm type = "LArVertexSplitting">
        <InputClusterListName>ProtoClustersW</InputClusterListName>
    </algorithm>
    <algorithm type = "LArVertexSeedFinding">
        <SeedClusterListName>SeedClustersU</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersU</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArSeedLengthGrowing">
        <SeedClusterListName>SeedClustersU</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersU</NonSeedClusterListName>
    </algorithm>  
    <algorithm type = "LArSeedFinding">
        <SeedClusterListName>SeedClustersU</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersU</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArSeedBranchGrowing">
        <SeedClusterListName>SeedClustersU</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersU</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArSeedConsolidation"> 
        <SeedClusterListName>SeedClustersU</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersU</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArSeedRelegation">
        <SeedClusterListName>SeedClustersU</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersU</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArParallelClusterMerging">
        <SeedClusterListName>SeedClustersU</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersU</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArBoundedClusterMerging">
        <SeedClusterListName>SeedClustersU</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersU</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArConeBasedMerging">
        <SeedClusterListName>SeedClustersU</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersU</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArRemnantClustering">
        <NonSeedClusterListName>NonSeedClustersU</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArIsolatedHitMerging">
        <NonSeedClusterListName>NonSeedClustersU</NonSeedClusterListName>
    </algorithm>



    <!-- 2D Particles, V view -->
    <algorithm type = "LArTwoDPreparation">
        <ClusterListName>ProtoClustersV</ClusterListName>
        <CaloHitListName>CaloHitListV</CaloHitListName>
        <VertexName>VertexV</VertexName>
    </algorithm>
    <algorithm type = "LArVertexSplitting">
        <InputClusterListName>ProtoClustersW</InputClusterListName>
    </algorithm>
    <algorithm type = "LArVertexSeedFinding">
        <SeedClusterListName>SeedClustersV</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersV</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArSeedLengthGrowing">
        <SeedClusterListName>SeedClustersV</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersV</NonSeedClusterListName>
    </algorithm>  
    <algorithm type = "LArSeedFinding">
        <SeedClusterListName>SeedClustersV</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersV</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArSeedBranchGrowing">
        <SeedClusterListName>SeedClustersV</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersV</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArSeedConsolidation"> 
        <SeedClusterListName>SeedClustersV</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersV</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArSeedRelegation">
        <SeedClusterListName>SeedClustersV</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersV</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArParallelClusterMerging">
        <SeedClusterListName>SeedClustersV</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersV</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArBoundedClusterMerging">
        <SeedClusterListName>SeedClustersV</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersV</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArConeBasedMerging">
        <SeedClusterListName>SeedClustersV</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersV</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArRemnantClustering">
        <NonSeedClusterListName>NonSeedClustersV</NonSeedClusterListName>
    </algorithm>
    <algorithm type = "LArIsolatedHitMerging">
        <NonSeedClusterListName>NonSeedClustersV</NonSeedClusterListName>
    </algorithm>



    <!-- Write Ntuples-->
    <!--algorithm type = "LArNtupleWriting">
        <SeedClusterListName>SeedClustersW</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersW</NonSeedClusterListName>
        <VertexName>VertexW</VertexName>
    </algorithm>
    <algorithm type = "LArNtupleWriting">
        <SeedClusterListName>SeedClustersU</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersU</NonSeedClusterListName>
        <VertexName>VertexU</VertexName>
    </algorithm>
    <algorithm type = "LArNtupleWriting">
        <SeedClusterListName>SeedClustersV</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersV</NonSeedClusterListName>
        <VertexName>VertexV</VertexName>
    </algorithm-->



    <!-- View W Display-->
    <algorithm type = "LArVisualMonitoring" instance = "DefaultDisplayW">
        <ShowMCParticles>true</ShowMCParticles>
        <SuppressMCParticles>22:0.01 2212:0.96 +16:1.e6 +14:1.e6 +12:1.e6 -12:1.e6 -14:1.e6 -16:1.e6</SuppressMCParticles> 
        <ShowCurrentVertex>false</ShowCurrentVertex>
        <ShowCurrentCaloHits>false</ShowCurrentCaloHits>
        <ShowCurrentTracks>false</ShowCurrentTracks>
        <ShowCurrentClusters>false</ShowCurrentClusters> 
        <MCParticleListNames>MCParticleListW</MCParticleListNames>
        <ClusterListNames>SeedClustersW NonSeedClustersW</ClusterListNames>
        <VertexNames>VertexW</VertexNames>
        <ShowCurrentPfos>false</ShowCurrentPfos>
        <ShowDetector>false</ShowDetector>
        <BlackBackground>false</BlackBackground>
        <HitColors>Energy</HitColors>
        <EnergyScaleThresholdE>0.0005</EnergyScaleThresholdE>
        <ThresholdEnergy>0.</ThresholdEnergy>
    </algorithm>

    <!-- View U Display-->
    <algorithm type = "LArVisualMonitoring" instance = "DefaultDisplayU">
        <ShowMCParticles>true</ShowMCParticles>
        <SuppressMCParticles>22:0.01 2212:0.96 +16:1.e6 +14:1.e6 +12:1.e6 -12:1.e6 -14:1.e6 -16:1.e6</SuppressMCParticles> 
        <ShowCurrentVertex>false</ShowCurrentVertex>
        <ShowCurrentCaloHits>false</ShowCurrentCaloHits>
        <ShowCurrentTracks>false</ShowCurrentTracks>
        <ShowCurrentClusters>false</ShowCurrentClusters>
        <MCParticleListNames>MCParticleListU</MCParticleListNames>
        <ClusterListNames>SeedClustersU NonSeedClustersU</ClusterListNames>
        <VertexNames>VertexU</VertexNames>
        <ShowCurrentPfos>false</ShowCurrentPfos>
        <ShowDetector>false</ShowDetector>
        <BlackBackground>false</BlackBackground>
        <HitColors>Energy</HitColors>
        <EnergyScaleThresholdE>0.0005</EnergyScaleThresholdE>
        <ThresholdEnergy>0.</ThresholdEnergy>
    </algorithm>

    <!-- View V Display-->
    <algorithm type = "LArVisualMonitoring" instance = "DefaultDisplayV">
        <ShowMCParticles>true</ShowMCParticles>
        <SuppressMCParticles>22:0.01 2212:0.96 +16:1.e6 +14:1.e6 +12:1.e6 -12:1.e6 -14:1.e6 -16:1.e6</SuppressMCParticles> 
        <ShowCurrentVertex>false</ShowCurrentVertex>
        <ShowCurrentCaloHits>false</ShowCurrentCaloHits>
        <ShowCurrentTracks>false</ShowCurrentTracks>
        <ShowCurrentClusters>false</ShowCurrentClusters>
        <MCParticleListNames>MCParticleListV</MCParticleListNames>
        <ClusterListNames>SeedClustersV NonSeedClustersV</ClusterListNames>
        <VertexNames>VertexV</VertexNames>
        <ShowCurrentPfos>false</ShowCurrentPfos>
        <ShowDetector>false</ShowDetector>
        <BlackBackground>false</BlackBackground>
        <HitColors>Energy</HitColors>
        <EnergyScaleThresholdE>0.0005</EnergyScaleThresholdE>
        <ThresholdEnergy>0.</ThresholdEnergy>
    </algorithm>



    <!-- 3D Reconstruction -->
    <algorithm type = "LArTrackSplitting">
        <algorithm type = "LArClusterCreation" description = "Clustering"/>
        <associationAlgorithms>
            <algorithm type = "LArLongitudinalAssociation"/>
            <algorithm type = "LArTransverseAssociation"/>
            <algorithm type = "LArClusterExtension"/>
            <algorithm type = "LArKinkSplitting"/>
        </associationAlgorithms>
        <SeedClusterListName>SeedClustersW</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersW</NonSeedClusterListName>
    </algorithm>

    <algorithm type = "LArTrackSplitting">
        <algorithm type = "LArClusterCreation" description = "Clustering"/>
        <associationAlgorithms>
            <algorithm type = "LArLongitudinalAssociation"/>
            <algorithm type = "LArTransverseAssociation"/>
            <algorithm type = "LArClusterExtension"/>
            <algorithm type = "LArKinkSplitting"/>
        </associationAlgorithms>
        <SeedClusterListName>SeedClustersU</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersU</NonSeedClusterListName>
    </algorithm>

    <algorithm type = "LArTrackSplitting">
        <algorithm type = "LArClusterCreation" description = "Clustering"/>
        <associationAlgorithms>
            <algorithm type = "LArLongitudinalAssociation"/>
            <algorithm type = "LArTransverseAssociation"/>
            <algorithm type = "LArClusterExtension"/>
            <algorithm type = "LArKinkSplitting"/>
        </associationAlgorithms>
        <SeedClusterListName>SeedClustersV</SeedClusterListName>
        <NonSeedClusterListName>NonSeedClustersV</NonSeedClusterListName>
    </algorithm>

    <algorithm type = "LArThreeDStraightTracks">
        <InputClusterListNameU>SeedClustersU</InputClusterListNameU>
        <InputClusterListNameV>SeedClustersV</InputClusterListNameV>
        <InputClusterListNameW>SeedClustersW</InputClusterListNameW>
        <OutputPfoListName>ThreeDParticles</OutputPfoListName>
    </algorithm>

    <algorithm type = "LArVisualMonitoring" instance = "PFODisplay">
        <ShowMCParticles>false</ShowMCParticles>
        <ShowCurrentVertex>false</ShowCurrentVertex>
        <ShowCurrentCaloHits>false</ShowCurrentCaloHits>
        <ShowCurrentTracks>false</ShowCurrentTracks>
        <ShowCurrentClusters>false</ShowCurrentClusters>
        <ShowCurrentPfos>true</ShowCurrentPfos>
        <ShowDetector>false</ShowDetector>
        <BlackBackground>false</BlackBackground>
        <HitColors>Iterate</HitColors>
    </algorithm>

</pandora>
