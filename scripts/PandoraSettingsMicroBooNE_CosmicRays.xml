	<SuppressMCParticles>22:0.01 2212:0.96 +16:1.e6 +14:1.e6 +12:1.e6 -12:1.e6 -14:1.e6 -16:1.e6</SuppressMCParticles>
	<ShowCurrentCaloHits>false</ShowCurrentCaloHits>
	<ShowCurrentTracks>false</ShowCurrentTracks>
	<ShowCurrentClusters>false</ShowCurrentClusters>
	<MCParticleListNames>MMCParticleListV</MCParticleListNames>
